<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dip"
                    android:background="@android:color/transparent"
                    android:text="Property Management" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_fenlei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:text="Landlord"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="220dp"
                            android:layout_height="2dip"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="45dp"
                            android:layout_marginRight="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg">

                        <ImageView
                            android:id="@+id/image_view_properties"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="20dp"
                            android:src="@drawable/houseicon" />

                        <TextView
                            android:id="@+id/text_view_properties"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_view_properties"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="Properties" />

                        <ImageView
                            android:id="@+id/image_view_Tenants"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/image_view_properties"
                            android:padding="20dp"
                            android:src="@drawable/ic_tenants" />

                        <TextView
                            android:id="@+id/text_view_Tenants"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_view_Tenants"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/text_view_properties"
                            android:gravity="center"
                            android:text="Tenants" />

                        <ImageView
                            android:id="@+id/image_view_collect_rent"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/image_view_Tenants"
                            android:padding="20dp"
                            android:src="@drawable/collect_rent" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_view_Tenants"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/text_view_Tenants"
                            android:gravity="center"
                            android:text="Collect Rent" />


                        <ImageView
                            android:id="@+id/image_view_todo_list"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_below="@+id/text_view_properties"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="20dp"
                            android:src="@drawable/to_do_list" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_view_todo_list"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="To-do list" />


                        <ImageView
                            android:id="@+id/image_view_docs"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_below="@+id/text_view_properties"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/image_view_todo_list"
                            android:padding="20dp"
                            android:src="@drawable/docs" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_view_todo_list"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/image_view_todo_list"
                            android:gravity="center"
                            android:text="Documents" />


                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_fenlei2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="30dip"
                            android:text="tenants"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="220dip"
                            android:layout_height="2dip"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="45dip"
                            android:layout_marginRight="10dip" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg">

                        <ImageView
                            android:id="@+id/image_view_properties_t"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="20dp"
                            android:src="@drawable/houseicon" />

                        <TextView
                            android:id="@+id/text_view_properties_t"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_view_properties_t"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="Properties" />

                        <ImageView
                            android:id="@+id/image_view_transaction"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/image_view_properties_t"
                            android:padding="20dp"
                            android:src="@drawable/transaction" />

                        <TextView
                            android:id="@+id/text_view_transaction"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_view_transaction"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/text_view_properties_t"
                            android:gravity="center"
                            android:text="Transaction" />

                        <ImageView
                            android:id="@+id/image_view_todo_list_t"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/image_view_transaction"
                            android:padding="20dp"
                            android:src="@drawable/to_do_list" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_view_transaction"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/text_view_transaction"
                            android:gravity="center"
                            android:text="To-do list" />


                        <ImageView
                            android:id="@+id/image_view_docs_t"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_below="@+id/text_view_properties_t"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="20dp"
                            android:src="@drawable/docs" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image_view_docs_t"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="Documents" />


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include layout="@layout/fragment_bottom_sheet_dialog_home" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_floating"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:backgroundTint="@android:color/transparent"
        android:layout_margin="16dp"
        android:scaleType="center"
        android:clickable="true"
        android:focusable="true"
        app:elevation="2dp"
        app:layout_anchor="@+id/bottomSheet"
        app:layout_anchorGravity="top|end" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>