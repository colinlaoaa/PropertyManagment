<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fenlei2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="tenants"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="220dip"
                android:layout_height="2dip"
                android:layout_alignParentRight="true"
                android:layout_marginTop="45dip"
                android:layout_marginRight="10dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@drawable/bg">

            <tarek360.animated.icons.AnimatedIconView
                android:id="@+id/animatedIconView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="20dp" />

            <TextView
                android:id="@+id/text_view_animatedIconView"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animatedIconView"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Properties" />

            <ImageView
                android:id="@+id/image_view_transaction"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/animatedIconView"
                android:padding="20dp"
                android:src="@drawable/transaction" />

            <TextView
                android:id="@+id/text_view_transaction"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_view_transaction"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_view_animatedIconView"
                android:gravity="center"
                android:text="Transaction" />

            <ImageView
                android:id="@+id/image_view_todo_list_t"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image_view_transaction"
                android:padding="20dp"
                android:src="@drawable/to_do_list" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_view_transaction"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_view_transaction"
                android:gravity="center"
                android:text="To-do list" />


            <ImageView
                android:id="@+id/image_view_docs_t"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/text_view_animatedIconView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:src="@drawable/docs" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_view_docs_t"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Documents" />

            <ImageView
                android:id="@+id/image_view_properties_t"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/text_view_animatedIconView"
                android:layout_toRightOf="@id/image_view_docs_t"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:src="@drawable/houseicon" />

            <TextView
                android:id="@+id/text_view_properties_t"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_view_properties_t"
                android:layout_toRightOf="@id/image_view_docs_t"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Properties" />


        </RelativeLayout>
    </LinearLayout>
